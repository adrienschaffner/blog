<h1>Article :</h1>

<h2><%= @article.title %></h2>
<p><%= link_to @article.author, author_article_path %></p>
<% if @article.picture.attached?  %>
  <%= cl_image_tag @article.picture.key, alt: "article picture", height: 300, crop: :fill %> <br>
  <%= link_to "modify picture", edit_article_path(@article) %>
<% end %>
<%# <p><%= @article.rating %>
<p><%= @article.body %></p>
<p><%= @article.rating %></p>

<ul>
  <li><%= link_to "Back", articles_path %></li>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
    }%>
  </li>
</ul>

